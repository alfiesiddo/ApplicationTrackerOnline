@model ApplicationTrackerOnline.Models.PotentialJob;

<!-- HTML -->
<div>
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center gap-2 py-2">

        <h5 class="mb-0">@Model.ToString()</h5>

        <div class="ms-md-auto w-100 w-md-auto buttons-container">
            <div class="d-grid gap-2 d-md-flex align-items-center justify-content-md-end">

                <a class="btn btn-outline-dark btn-equal"
                   href="@Model.JobListing"
                   target="_blank"
                   rel="noopener"
                   aria-label="View job listing">
                    View Job Listing
                </a>

                <button type="button"
                        class="btn btn-outline-dark btn-equal"
                        data-bs-toggle="modal"
                        data-bs-target="#addApplicationModal-@Model.Id"
                        aria-label="Add to Applications">
                    Add To 'Applications'
                </button>

                <form method="post"
                      asp-controller="Home"
                      asp-action="DeleteToApply"
                      class="m-0">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-danger btn-equal" aria-label="Delete">
                        Delete
                    </button>
                </form>

            </div>
        </div>

    </div>
</div>
<!-- Modal -->
<div class="modal fade"
     id="addApplicationModal-@Model.Id"
     tabindex="-1"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post"
                  asp-controller="Home"
                  asp-action="AddNewApplicationFromPot">

                @Html.AntiForgeryToken()

                <div class="modal-header modalText">
                    <h5 class="modal-title">Add Application</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body modalText">

                    <div class="mb-3">
                        <label class="form-label card-title">Company</label>
                        <input name="Company"
                               class="form-control"
                               value="@Model.EmployerName"
                               required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <input name="Role"
                               class="form-control"
                               value=""
                               placeholder="e.g. Software Developer"
                               required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Location</label>
                        <input name="Location"
                               class="form-control"
                               placeholder="e.g. Manchester"
                               value=""
                               required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Salary</label>
                        <input name="Salary"
                               type="number"
                               class="form-control"
                               value="0" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Application Portal</label>
                        <input name="Portal"
                               placeholder="e.g. https://tesco.com/careers"
                               class="form-control"
                               value="" 
                               required />
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-danger"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit"
                            class="btn btn-dark">
                        Add Application
                    </button>
                </div>
                <input type="hidden" name="PotentialJobId" value="@Model.Id" />

            </form>
        </div>
    </div>
</div>

<style>
    .modalText {
        color: black;
    }
</style>